<div class="border-b border-gray-100 p-4">
  <div class="container lg:max-w-screen-lg mx-auto text-right">
    <ul class="uppercase">
      {% for link in linklists.main-menu.links %}
        {% assign child_list_handle = link.title | handleize %}
        {% if linklists[child_list_handle].links != blank %}
          <li class="inline-block mr-2"><a href="{{ link.url }}">{{ link.title }}</a></li>
          [{% for childlink in linklists[child_list_handle].links %}
            <li class="inline-block mr-2"><a href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
          {% endfor %}]
        {% else %}
          <li class="inline-block mr-2"><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endif %}
      {% endfor %}
      {% if shop.customer_accounts_enabled %}
        {% if customer %}
          <li class="inline-block mr-2"><a href="/account">account</a></li>
          <li class="inline-block">{{ 'Log Out' | customer_logout_link }}</li>
        {% else %}
          <li class="inline-block mr-2">{{ 'Log In ' | customer_login_link }}</li>
          <li class="inline-block">{{ 'Register' | customer_register_link }}</li>
        {% endif %}
      {% endif %}            
    </ul>        
  </div>
</div>